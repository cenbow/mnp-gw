<included>
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${jboss.server.log.dir}/PinCodeMsgBroker/app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${jboss.server.log.dir}/PinCodeMsgBroker/%d{yyyyMM,aux}/%d{yyyy-MM-dd}_app.log</fileNamePattern>
            <maxHistory>500</maxHistory>
        </rollingPolicy>
        <encoder>
            <charset>UTF-8</charset>
            <pattern>${appender.encoder.pattern}</pattern>
        </encoder>
    </appender>
</included>