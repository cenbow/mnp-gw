<included>
    <appender name="EMAIL" class="ch.qos.logback.classic.net.SMTPAppender">
 		<jndiLocation>mail/ClhMsgBroker</jndiLocation>
        <sessionViaJNDI>true</sessionViaJNDI>
        <to>esbinfo@cattelecom.com,tidaratana.t@cattelecom.com</to>
        <subject>MnpClhMsgBrokerError[${jboss.node.name}]: [%thread] %logger{30}</subject>
        <layout class="ch.qos.logback.classic.html.HTMLLayout">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS}%thread%level%logger{20}%msg</pattern>
        </layout>
        <cyclicBufferTracker class="ch.qos.logback.core.spi.CyclicBufferTracker">
            <bufferSize>10</bufferSize>
        </cyclicBufferTracker>
    </appender>
</included>