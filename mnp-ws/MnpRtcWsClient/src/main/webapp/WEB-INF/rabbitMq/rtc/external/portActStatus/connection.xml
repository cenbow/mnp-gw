<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:rabbit="http://www.springframework.org/schema/rabbit"
       xmlns:task="http://www.springframework.org/schema/task"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/rabbit http://www.springframework.org/schema/rabbit/spring-rabbit-1.5.xsd
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd">

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="ignoreUnresolvablePlaceholders" value="true"/>
        <property name="locations">
            <list>
                <value>/WEB-INF/rabbitMq/rtc/external/portActStatus/connection.${spring.profiles.active}.properties</value>
            </list>
        </property>
    </bean>
    
    <!--RabbitMQ Config-->
    <rabbit:connection-factory id="rabbitMqExtRtcPortActStatusConsumerConnectionFactory" 
                               addresses="${rabbitmq.connection-factory.extrtcws-portact-status-consumer.addresses}" 
                               username="${rabbitmq.connection-factory.extrtcws-portact-status-consumer.username}" password="${rabbitmq.connection-factory.extrtcws-portact-status-consumer.password}" 
                               channel-cache-size="${rabbitmq.connection-factory.extrtcws-portact-status-consumer.channel-cache-size}" executor="rabbitMqConnectionFactoryExecutor"
                               virtual-host="${rabbitmq.connection-factory.extrtcws-portact-status-consumer.virtual-host}"/>  
    <rabbit:connection-factory id="rabbitMqExtRtcPortActStatusPublisherConnectionFactory" 
                               addresses="${rabbitmq.connection-factory.extrtcws-portact-status-publisher.addresses}" 
                               username="${rabbitmq.connection-factory.extrtcws-portact-status-publisher.username}" password="${rabbitmq.connection-factory.extrtcws-portact-status-publisher.password}" 
                               channel-cache-size="${rabbitmq.connection-factory.extrtcws-portact-status-publisher.channel-cache-size}" executor="rabbitMqConnectionFactoryExecutor"
                               virtual-host="${rabbitmq.connection-factory.extrtcws-portact-status-publisher.virtual-host}"/>  
    
</beans>